MainUi := Window {
    width: 800px;
    height: 480px;

    property<int> active-page: 0;

    HorizontalLayout {
        width: 800px;
        height: 480px;

        nav-bar := Rectangle {
            height: 100%;
            width: 100px;
            background: red;
            VerticalLayout {
                height: 100%;
                width: 100px;
                Rectangle {
                    height: 100px;
                    width: 100px;
                    background: yellow;

                    TouchArea {
                        clicked => { root.active-page = 0; }
                    }
                }
    
                Rectangle {
                    height: 100px;
                    width: 100px;
                    background: green;

                    TouchArea {
                        clicked => { root.active-page = 1; }
                    }
                }

                Rectangle {
                    height: 100px;
                    width: 100px;
                    background: orange;

                    TouchArea {
                        clicked => { root.active-page = 2; }
                    }
                }
             }
        }

        main-view := Rectangle {
            height: 100%;

            Rectangle {
                y: active-page == 0 ? 0px : height;
                height: 100%;
                Rectangle {
                    height: 100px;
                    width: 400px;
                    x: (parent.width - width) / 2;
                    y: 34px;
                    background: red;
                    Text {
                        text: "**********";
                        font-size: 100px;
                    }
                }
                GridLayout {
                    height: 300px;
                    width: 400px;
                    x: (parent.width - width) / 2;
                    y: (parent.height - height) / 1.3;
                    spacing: 5px;
                    Row {
                        Rectangle { background: green; }
                        Rectangle { background: red; }
                        Rectangle { background: blue; }
                        Rectangle { background: black; }
                    }
                    Row {
